{
  "name": "dbmanager-workspace",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "packages/core",
    "packages/adapters/*",
    "applications/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:device-app\" \"npm run dev:sync-server\"",
    "dev:device-app": "cd applications/device-app && npm run dev",
    "dev:sync-server": "cd applications/sync-server && npm run dev",
    "build": "npm run build:core && npm run build:adapters && npm run build:apps",
    "build:core": "cd packages/core && npm run build",
    "build:adapters": "npm run build:adapter:node-sqlite && npm run build:adapter:node-postgres && npm run build:adapter:browser-sqljs",
    "build:adapter:node-sqlite": "cd packages/adapters/node-sqlite && npm run build",
    "build:adapter:node-postgres": "cd packages/adapters/node-postgres && npm run build",
    "build:adapter:browser-sqljs": "cd packages/adapters/browser-sqljs && npm run build",
    "build:apps": "cd applications/device-app && npm run build && cd ../sync-server && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clean": "rimraf dist packages/*/dist applications/*/dist",
    "install:all": "npm install",
    "update-packages": "ncu -u && cd packages/core && ncu -u && cd ../adapters/node-sqlite && ncu -u && cd ../node-postgres && ncu -u && cd ../browser-sqljs && ncu -u && cd ../../../applications/device-app && ncu -u && cd ../sync-server && ncu -u && cd ../../ && npm install"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "jest": "^30.0.3",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}